<style type="text/css">
    html {
        font-size: 14px;
        font-family: 'Franklin Gothic', 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
    }

    body {
        background-color: white;
    }

    #container {
        border: 2px solid #ff0000;
        border-radius: 10px;
    }

    header {
        background-color: burlywood;
        border: 2px solid#000000;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo img {
        height: 100px;
    }

    nav ul {
        list-style-type: none;
        display: flex;
    }

        nav ul li {
            margin-left: 20px;
            font-size:1.2rem;
        }

            nav ul li a {
                text-decoration: none;
                color: #000000;
                font-weight: bold;
            }
            section{
                background-color:whitesmoke
                min-height=300px;
            }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="container">
        <header>
            <div class="logo">
                <img src="https://brasol.vn/wp-content/uploads/2022/09/logo-nike-1.jpg" alt="logo" />
            </div>
            <nav>
                <ul>
                    <li><a href="~/Home/TrangChu">Trang chủ</a></li>
                    <li><a href="~/Product/ProductDetail">Sản phẩm</a></li>
                    <li><a href="~/Product/ShoppingCart">Giỏ hàng</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                </ul>
            </nav>
        </header>
        <section >            
                @RenderBody()
        </section>
        <footer>
           
        </footer>
    </div>

</body>
</html>
